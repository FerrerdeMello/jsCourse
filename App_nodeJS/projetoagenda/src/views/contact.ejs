<%- include('includes/head') %>
<%- include('includes/nav') %>
  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-8 my-3">
        <h1 class="text-center">Contacts</h1>
        <p class="text-center lead">Create or edit yours contacts:</p>

        <%- include('includes/messages') %>

        <%  if(contactById._id) { %>
          <form action="/contact/edit/<%= contactById._id %>" method="POST">
        <% } else { %>
          <form action="/contact/register" method="POST">
        <% } %>
            <input type="hidden" name="_csrf" value=<%=csrfToken %>>
            <div class="mb-3">
              <label class="form-label">Name:</label>
              <input type="text" class="form-control" name="name" value="<%= contactById.name %>">
            </div>
            <div class="mb-3">
              <label class="form-label">Surname:</label>
              <input type="text" class="form-control" name="surname" value="<%= contactById.surname %>">
            </div>
            <div class="mb-3">
              <label class="form-label">Email:</label>
              <input type="email" class="form-control" name="email" value="<%= contactById.email %>">
            </div>
            <div class="mb-3">
              <label class="form-label">Phone number:</label>
              <input type="tel" class="form-control" name="phone" value="<%= contactById.phone %>">
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
          </form>
      </div>
      <div class="col-lg-2"></div>
    </div>
  </div>
<%- include('includes/footer') %>